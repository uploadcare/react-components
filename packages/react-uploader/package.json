    "@types/react": "17 || 18",
    "next": "13 || 14"
  },
  "dependencies": {
    "@uploadcare/file-uploader": "^1.2.0",
    "@uploadcare/react-adapter": "^0.3.0"
  },
  "repository": {
    "type": "git",
